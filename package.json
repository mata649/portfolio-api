		"preset": "ts-jest",
		"testEnvironment": "node",
		"collectCoverage": true,
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1"
		},
		"coveragePathIgnorePatterns": [
			"/node_modules/",
			"/test/",
			"/dist/"
